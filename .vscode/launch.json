    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch via NPM",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "webdev",
                "build",
                "debug"
            ],
            "port": 9229            
        },
        {
            "type": "node",
            "request": "launch",
            "name": "yarn build",
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "webdev",
                "build"
            ],
            //"port": 9229,
            //"stopOnEntry": false,
            //"protocol": "inspector"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "yarn css",
            "runtimeExecutable": "yarn",
            "runtimeArgs": [
                "css"
            ],
            //"port": 9229,
            //"stopOnEntry": true
        }
    ]
}